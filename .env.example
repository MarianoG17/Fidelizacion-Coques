# Base de datos principal (Fidelización Coques)
DATABASE_URL="postgresql://user:password@host.neon.tech/fidelizacion?sslmode=require"

# Base de datos DeltaWash Legacy (para consultar estados de autos)
DELTAWASH_DATABASE_URL="postgresql://user:password@deltawash-host.neon.tech/deltawash?sslmode=require"

# URL pública de la aplicación (dominio personalizado o Vercel)
# Se usa para generar links en emails (recuperación de contraseña, bienvenida, etc.)
NEXT_PUBLIC_APP_URL="https://app.coques.com.ar"

# Brevo (Sendinblue) - Servicio de emails transaccionales
# Crear cuenta en https://www.brevo.com y obtener API Key
# IMPORTANTE: Configurar dominio verificado en Brevo para usar tu propio dominio
BREVO_API_KEY="xkeysib-xxxxxxxxxxxxxxxxxxxxxx"
# Email desde el cual se envían los emails (debe estar verificado en Brevo)
BREVO_FROM_EMAIL="noreply@mail.coques.com.ar"

# Vercel (opcional, se configura automáticamente)
# VERCEL_URL=

# API Keys para locales
# Generar con: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
LOCAL_CAFETERIA_API_KEY="tu_api_key_aqui"
LOCAL_LAVADERO_API_KEY="tu_api_key_aqui"

# Autenticación App Coques (para empleados)
# Contraseña para usuario "coques" en /local/login
COQUES_LOCAL_PASSWORD="tu_contraseña_segura_aqui"
# JWT Secret para tokens de sesión del local (opcional, se genera automáticamente si no está)
JWT_SECRET_LOCAL="tu_jwt_secret_aqui_64_caracteres"

# WooCommerce Integration
# URL base de tu tienda WooCommerce (sin / al final)
WOOCOMMERCE_URL="https://tutienda.com"
# Consumer Key de WooCommerce (WooCommerce > Settings > Advanced > REST API)
WOOCOMMERCE_KEY="ck_xxxxxxxxxxxxxxxxxxxxxx"
# Consumer Secret de WooCommerce
WOOCOMMERCE_SECRET="cs_xxxxxxxxxxxxxxxxxxxxxx"
